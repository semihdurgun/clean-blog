<!DOCTYPE html>

<html lang="en">
  <%- include('partials/_header') -%>

  <body>
    <%- include('partials/_navigation') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading"></div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <h2 class="section-heading" style="text-align: center">
              <%= post.title %>
            </h2>
            <p style="text-align: justify"><%= post.detail %></p>

            <i
              ><i class="far fa-calendar-alt"></i>
              Created at <%= post.dateCreated.toUTCString().substring(0,22) %>
            </i>
          </div>
        </div>
        <div class="col-lg-8 col-md-10 mx-auto">
          <br />
          <a href="/posts/edit/<%= post._id %>" class="btn btn-primary"
            ><span>Update</span></a
          ><a
            href="/posts/<%= post._id %>?_method=DELETE"
            class="btn btn-warning float-right"
            onclick="return confirm('Are you sure?')"
            ><span>Delete</span></a
          >
        </div>
      </div>
    </article>
    <hr />

    <%- include('partials/_footer') -%>
  </body>
</html>
